{
    "name"        : "bernard/bernard",
    "description" : "Message queue implemented in PHP with Redis as a backend.",
    "license"     : "MIT",

    "autoload" : {
        "psr-4" : { "Bernard\\" : "src/" }
    },

    "autoload-dev" : {
        "psr-4" : { "Bernard\\Tests\\" : "tests/" }
    },

    "require" : {
        "php"                      : "~5.4 || ~7.0",
        "bernard/normalt"          : "~1.0",
        "symfony/event-dispatcher" : "~2.3",
        "beberlei/assert"          : "~2.0"
    },

    "require-dev" : {
        "psr/log"                      : "~1.0",
        "pimple/pimple"                : "~3.0",
        "predis/predis"                : "~0.8",
        "symfony/console"              : "~2.0",
        "symfony/dependency-injection" : "~2.0",
        "doctrine/dbal"                : "~2.3",
        "iron-io/iron_mq"              : "~1.4",
        "aws/aws-sdk-php"              : "~2.4",
        "pda/pheanstalk"               : "~3.0",
        "league/container"             : "~1.0",
        "videlalvaro/php-amqplib"      : "~2.5"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
