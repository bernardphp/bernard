{
    "name"        : "bernard/bernard",
    "description" : "Message queue implemented in PHP with Redis as a backend.",
    "license"     : "MIT",

    "autoload" : {
        "psr-0" : { "Bernard" : "src/" },
        "files" : ["src/Bernard/functions.php"]
    },

    "repositories" : [{
        "type" : "vcs",
        "url" : "git://github.com/bernardphp/normalt.git"
    }],

    "require" : {
        "php"                      : ">=5.3.3",
        "bernard/normalt"          : "dev-master",
        "symfony/event-dispatcher" : ">=2.3,<3.0",
        "symfony/serializer"       : ">=2.3,<3.0"
    },

    "require-dev" : {
        "psr/log"                      : "~1.0",
        "pimple/pimple"                : "~1.0",
        "predis/predis"                : "~0.8",
        "symfony/console"              : "~2.0",
        "symfony/dependency-injection" : "~2.0",
        "doctrine/dbal"                : "~2.3",
        "iron-io/iron_mq"              : "~1.4",
        "aws/aws-sdk-php"              : "~2.4"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
