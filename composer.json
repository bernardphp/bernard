{
    "name"        : "bernard/bernard",
    "description" : "Message queue implemented in PHP with Redis as a backend.",
    "license"     : "MIT",

    "autoload" : {
        "psr-4" : { "Bernard\\" : "src/Bernard" },
        "files" : ["src/Bernard/functions.php"]
    },

    "autoload-dev" : {
        "psr-4" : { "Bernard\\Tests\\" : "tests/Bernard/Tests" }
    },

    "require" : {
        "php"                      : ">=5.3.3",
        "bernard/normalt"          : "~0.2",
        "symfony/event-dispatcher" : "~2.3"
    },

    "require-dev" : {
        "psr/log"                      : "~1.0",
        "pimple/pimple"                : "~1.0",
        "predis/predis"                : "~0.8",
        "symfony/console"              : "~2.0",
        "symfony/dependency-injection" : "~2.0",
        "doctrine/dbal"                : "~2.3",
        "iron-io/iron_mq"              : "~1.4",
        "aws/aws-sdk-php"              : "~2.4"
    },

    "extra" : {
        "branch-alias" : {
            "dev-master" : "1.0.x-dev"
        }
    }
}
